<%= render 'shared/banner_index' %>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6">
        <%= link_to cocktail_path(cocktail) do%>
          <div class="card" >
            <%= cl_image_tag cocktail.photo, height: 400, width: 400, crop: :fill %>
            <div class="card-description">

              <h5 class='btn btn-info'><%= cocktail.name %></h5>
              <!-- <p>Very cool city, the best</p> -->

            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



